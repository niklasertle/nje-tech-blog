<div>
    <div>
        <h2>{{post.title}}</h2>
        <p>By: {{post.user.name}}</p>
        <p>On: {{format_date post.createdAt}}</p>
    </div>
    <div>
        <p>{{post.description}}</p>
    </div>
</div>

{{#if logged_in}}
<button class="btn btn-primary" id="comment-button">Add Comment</button>
{{/if}}

{{#if (if_equals post.user_id user_id)}}
<button class="btn btn-primary" id="update-button">Update</button>
<button class="btn btn-primary" id="delete-button">Delete</button>
{{/if}}

{{#each comments as |comment|}}
<div>
    <div>
        <h2>{{title}}</h2>
        <p>By: {{user.name}}</p>
        <p>On: {{format_date createdAt}}</p>
    </div>
    <div>
        <p>{{description}}</p>
    </div>
</div>
{{/each}}

<div class='hide comment'>
    <h2>Add your comment</h2>
    <form class="form comment-form">
        <div class="form-group">
            <label for="comment-title">Title:</label>
            <input class="form-input" type="textr=" id="comment-title" />
        </div>
        <div class="form-group">
            <label for="comment-description">Description:</label>
            <input class="form-input" type="text" id="comment-description" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Add</button>
        </div>
    </form>
</div>

<script src="/js/postPage.js"></script>